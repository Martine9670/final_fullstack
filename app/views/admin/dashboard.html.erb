<div class="container mt-5">
  <h1 class="mb-4 text-center">Tableau de bord Admin</h1>

  <p>Bienvenue, <%= current_user.email %> ğŸ‘‹</p>

  <div class="row mt-4">
    <div class="col-md-6">
      <h3>Utilisateurs</h3>
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item"><%= user.email %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-6">
      <h3>Rendez-vous</h3>
      <ul class="list-group">
        <% @appointments.each do |appt| %>
          <li class="list-group-item">
            <%= appt.date.strftime("%d/%m/%Y") %> - 
            <%= appt.start_time.strftime("%H:%M") if appt.start_time %> 
            (<%= appt.user.email %>)
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

