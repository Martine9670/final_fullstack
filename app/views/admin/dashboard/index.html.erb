<div class="container my-5">
  <h1 class="mb-4 text-center">Tableau de bord Admin</h1>

  <p>Bienvenue, <%= current_user.email %> 👋</p>

  <div class="row mt-4">

    <!-- Utilisateurs -->
    <div class="col-md-6">
      <h3>Utilisateurs</h3>
      <ul class="list-group">
        <% @users.each do |user| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <span>
              <%= user.email %>
              <% if user.admin? %>⭐<% end %>
            </span>
            <% unless user == current_user %>
              <%= button_to (user.admin? ? "Rétrograder" : "Promouvoir"),
                            admin_toggle_admin_user_path(user),
                            method: :patch,
                            class: "btn btn-sm btn-warning" %>
            <% else %>
              <span class="text-muted">Vous</span>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>

    <!-- Rendez-vous -->
    <div class="col-md-6">
      <h3>Rendez-vous</h3>
      <ul class="list-group">
        <% @appointments.each do |appt| %>
          <li class="list-group-item">
            <%= appt.date.strftime("%d/%m/%Y") %> - <%= appt.start_time&.strftime("%H:%M") %>
            (<%= appt.user.email %>)
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
