<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card card-green shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">üîê Connexion</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, "Adresse e-mail", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Mot de passe", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Se souvenir de moi", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-flex justify-content-center">
              <%= f.submit "Se connecter", class: "btn btn-green" %>
            </div>
          <% end %>

          <div class="text-center mt-4">
            <%= link_to "Mot de passe oubli√© ?", new_password_path(resource_name), class: "text-muted d-block mb-2" %>
            <%= link_to "Cr√©er un compte", new_registration_path(resource_name), class: "text-success fw-bold" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
