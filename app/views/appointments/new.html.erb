<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card card-green shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Prendre rendez-vous ğŸ“…</h2>

          <%= form_for @appointment do |f| %>
            <div class="mb-3">
              <%= f.label :date, class: "form-label" %>
              <%= f.date_field :date, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :time, class: "form-label" %>
              <%= f.time_field :time, class: "form-control" %>
            </div>

            <!-- Si tu veux dâ€™autres champs, ajoute ici -->

            <div class="d-flex justify-content-center">
              <%= f.submit "Confirmer le rendez-vous", class: "btn btn-green" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
