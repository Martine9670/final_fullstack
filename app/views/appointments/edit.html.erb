<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-sm">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">ðŸ“… Modifier le rendez-vous </h2>

          <%= form_for @appointment do |f| %>
            <div class="mb-3">
              <%= f.label :date, "Date du rendez-vous", class: "form-label" %>
              <%= f.date_field :date, class: "form-control", required: true, min: Date.today %>
            </div>

            <div class="mb-3">
              <%= f.label :start_time, "Heure du rendez-vous", class: "form-label" %>
              <%= f.time_field :start_time,
                    class: "form-control",
                    required: true,
                    value: f.object.start_time&.strftime("%H:%M"),
                    min: (f.object.date == Date.today ? Time.current.strftime("%H:%M") : "00:00") %>
            </div>

            <div class="d-flex justify-content-center gap-2">
              <%= f.submit "Mettre Ã  jour le rendez-vous", class: "btn btn-primary" %>
              <%= link_to "Annuler", appointments_path, class: "btn btn-secondary" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>
